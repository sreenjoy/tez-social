{
  "version": 2,
  "framework": "nextjs",
  "regions": ["iad1"],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://tez-social-production.up.railway.app/api/$1",
      "headers": {
        "Cache-Control": "no-store, max-age=0"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/$1",
      "continue": true
    }
  ],
  "headers": [
    {
      "source": "/(.*).(jpg|jpeg|png|gif|webp|svg|ico)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).(js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
} 